<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Details</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <br>
    <% if(success_message.length > 0) {%>
    <div class="alert alert-success" role="alert">
  
      <%= success_message %>
    </div>
    <% } %>
    <% if(error_message.length > 0) {%>
      <div class="alert alert-danger" role="alert">
    
        <%= error_message %>
      </div>
      <% } %> 
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Sales Details</h2>
      <div>
        <a href="/authorForm" class="btn btn-primary me-2">Add Author</a>
        <a href="/bookForm" class="btn btn-success me-2">Add Book</a>
        <a href="/salesForm" class="btn btn-warning">Add Sales</a>
      </div>
    </div>

    <% if (details && details.length > 0) { %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Book Title</th>
            <th>Author Name</th>
            <th>Quantity</th>
            <th>Book Price</th>
            <th>Total Revenue</th>
            <th>Sold At</th>
          </tr>
        </thead>
        <tbody>
          <% details.forEach((detail, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= detail.bookTitle %></td>
              <td><%= detail.authorName %></td>
              <td><%= detail.quantity %></td>
              <td>$<%= detail.bookPrice %></td>
              <td>$<%= detail.totalRevanue %></td>
              <td><%= new Date(detail.soldAt).toLocaleDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No sales data found. Use the buttons above to add data.
      </div>
    <% } %>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enrollment Details</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <br>
    <% if(success_message.length > 0) {%>
    <div class="alert alert-success" role="alert">
  
      <%= success_message %>
    </div>
    <% } %>
    <% if(error_message.length > 0) {%>
      <div class="alert alert-danger" role="alert">
    
        <%= error_message %>
      </div>
      <% } %> 
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Enrollment Details</h2>
      <div>
        <a href="/courseForm" class="btn btn-primary me-2">Add Course</a>
        <a href="/studentForm" class="btn btn-success me-2">Add Student</a>
        <a href="/enrollmentForm" class="btn btn-warning">Add Enrollment</a>
      </div>
    </div>

    <% if (details && details.length > 0) { %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Student Name</th>
            <th>Course Title</th>
            <th>Course Fee</th>
          </tr>
        </thead>
        <% details.forEach((detail, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= detail.studentName %></td>
              <td>
                <ul>
                  <% detail.enrollments.forEach(enrollment => { %>
                    <li>
                      <strong>Course:</strong> <%= enrollment.courseTitle %>, 
                      <strong>Fee:</strong> $<%= enrollment.courseFee %>, 
                      <strong>Enrollment-Date:</strong> <%= new Date(enrollment.enrollmentDate).toLocaleDateString() %>
                    </li>
                  <% }) %>
                </ul>
              </td>
              <td>$<%= detail.totalPrice %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No enrollments found. Use the buttons above to add data.
      </div>
    <% } %>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>